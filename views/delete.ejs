<body >

<p class="text-center" style="color: red;">
 <% if (messages.error) { %>
  <%= messages.error %>
<% } %> </p>

      <%- include ("./messages") %>

    <div class="login-form">
        <form action="/DeleteAccount" method="POST">
        <h3 class="text-center">Type <b>confirm</b> to delete your account</h3>   
            <div class="form-group">
                <input  type="input" id="confirm" class="form-control" name="confirm" placeholder="Type confirm"  required="required" />
            </div>        
            <div class="form-group">
                <button type="submit" class="btn-danger btn-lg btn-block " onclick="return Validate()">Delete</button>
            </div>

		<script type="text/javascript">

            function Validate() {
                var val = document.getElementById("confirm").value;
                if (val != "confirm") {
                    alert("invalid input");
                    return false;
                }
                return true;
            }


		</script>
    <p style="color:black;" class="text-center small">Back to <u><a style="color: blue;" href="/">HOME</a></u></p>
        </form>
    </div>
</body>
</html>